    <record id="action_sale_order_revision" model="ir.ui.view">
        <field name="name">AMC Revision</field>
        <field name="model">sale.order.revision.wizard</field>
        <field name="arch" type="xml">
            <form string="AMC Revision">
                <group>
                    <group>
                        <field name="order_id" invisible="1"/>
                        <field name="revision_id" invisible="1"/>
                        <field name="next_code"/>
                    </group>
                    <group>
                    <field name="reason"/>
                </group>
                </group>

                <footer>
                    <button name="create_revision" string="_Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window id="action_revision_wizard_sale_order" name="Amc Revision" res_model="sale.order.revision.wizard"
                view_mode="form" target="new"/>


