<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="custom_report_amc_quotation">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="stevok_customisation.custom_report_amc_quotation_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
        <template id="custom_report_amc_quotation_document">
            <t t-foreach="docs" t-as="o">
                <t t-call="stevok_customisation.report_header_minimal_amc_quot"/>
                <t t-call="web.external_layout" id="layout">
                    <t t-set="doc" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                    <div class="page" style="font-size: 13px;font-family:Roboto;">
                        <div class="oe_structure"/>
                        <div class="row">
                            <div class="col-12 text-center">
                                <strong style="text-align:center;font-size:20px">AMC QUOTATION</strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <strong>From:</strong>
                                <br/>
                                <strong>Attn:</strong>
                                <t t-if="doc.user_id">
                                    <span t-field="doc.user_id.name"/>
                                </t>

                                <t t-if="doc.user_id.partner_id.mobile">
                                    <br/>
                                    <span style="padding-left:10px" t-field="doc.user_id.partner_id.mobile"/>
                                </t>
                                <t t-if="doc.user_id.partner_id.email">
                                    <br/>
                                    <span style="padding-left:10px" t-field="doc.user_id.partner_id.email"/>
                                </t>
                            </div>
                            <div class="col-4">
                                <span></span>
                            </div>
                            <div class="col-4">
                                <strong>To:</strong>
                                <br/>
                                <strong>Attn:</strong>
                                <t t-if="doc.contact_id">
                                    <span t-field="doc.contact_id.name"/>
                                </t>

                                <t t-if="doc.contact_id.mobile">
                                    <br/>
                                    <span style="padding-left:10px" t-field="doc.contact_id.mobile"/>
                                </t>
                                <t t-if="doc.contact_id.email">
                                    <br/>
                                    <span style="padding-left:10px" t-field="doc.contact_id.email"/>
                                </t>
<!--                                <span style="padding-left:20px" t-field="doc.partner_id.name"/>-->
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">

                                <strong t-field="user.company_id.name"/>
                                <br/>
                                <div t-field="user.company_id.partner_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: True,}"/>
                                <span>Tel:
                                    <span t-field="user.company_id.partner_id.phone"/>
                                </span>
                                <br/>
                                <span>Email:
                                    <span t-field="user.company_id.partner_id.email"/>
                                </span>


                            </div>
                            <div class="col-4">
                                <span></span>
                            </div>
                            <div class="col-4">
                                <t t-if="doc.partner_id">
                                    <strong t-field="doc.partner_id.name"/>
                                    <br/>
                                    <span t-field="o.partner_id.street"/>
                                    <t t-if="o.partner_id.street and o.partner_id.street2">
                                        ,
                                    </t>
                                    <span t-field="o.partner_id.street2"/>
                                    <br/>
                                    <span>Tel:
                                        <span t-field="o.partner_id.phone"/>
                                    </span>
                                    <br/>
                                    <span>Email:
                                        <span t-field="o.partner_id.email"/>
                                    </span>
                                </t>

                            </div>
                        </div>

                        <br/>
                        <br/>
                        <span>
                            <u>
                                <b>Project Information</b>
                            </u>
                        </span>
                        <br/>
                        <br/>
                        <span style="padding-left:20px">
                            <b>Subject :</b>
                        </span>
                        <t t-if="doc.heading">
                            <b>
                                <span style="padding-left:100px" t-field="doc.heading"/>
                            </b>
                        </t>
                        <br/>
                        <span style="padding-left:20px">
                            <b>Project Site :</b>
                        </span>
                        <t t-if="doc.project_name">
                            <b>
                                <span style="padding-left:77px" t-field="doc.project_name"/>
                            </b>
                        </t>
                        <br/>
                        <span style="padding-left:20px" t-field="doc.quotation_notes"/>
                        <br/>
                        <br/>
                        <br/>
                        <span>
                            <b>Annual Maintenance of :</b>
                        </span>
                        <br/>
                        <br/>
                        <table width="90%">

                            <t t-foreach="doc.amc_system_type_ids" t-as="line">

                                <tr>
                                    <td width="5%" class="text-center">
                                        <strong>*</strong>
                                    </td>
                                    <td width="50%" class="text-left">
                                        <span t-field="line.amc_service_type.name"/>
                                    </td>
                                    <td width="10%" class="text-center">
                                        <span t-field="line.number"/>
                                    </td>
                                    <td width="25%" class="text-center">
                                        <span t-field="line.times"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                        <br/>
                        <t t-if="doc.amc_order_line_ids">
                            <t t-set="total_price" t-value="0"/>
                            <table width="90%" style="border:1px solid black;">
                                <thead>
                                    <tr>
                                        <th class="text-left" style="border-bottom:1px solid black;padding-left:5px">SlNo.</th>
                                        <th class="text-left" style="border-bottom:1px solid black;">Building Name
                                        </th>
                                        <th class="text-left" style="border-bottom:1px solid black;">Location</th>
                                        <th class="text-right" style="border-bottom:1px solid black;padding-right:5px">Unit Price</th>
                                    </tr>
                                </thead>
                                <t t-set="sl_no" t-value="1"/>
                                <t t-foreach="doc.amc_order_line_ids" t-as="line">
                                    <tr>
                                        <td  width="10%" style="padding-left:5px" class="text-left">
                                            <span t-esc="sl_no"/>
                                        </td>
                                        <td width="50%" class="text-left">
                                            <span t-field="line.building_name"/>
                                        </td>
                                        <td width="20%" class="text-left">
                                            <span t-field="line.location"/>
                                        </td>
                                        <td width="20%" style="padding-right:10px" class="text-right">
                                            <t t-esc="'{0:,.2f}'.format(float(line.unit_price))" />
                                        </td>
                                        <t t-set="sl_no" t-value="sl_no + 1"/>
                                        <t t-set="total_price" t-value="total_price + line.unit_price"/>
                                    </tr>
                                </t>

                            </table>
                            <br/>
                            <table width="90%">
                                <tr>
                                    <td colspan="4">
                                        <span>Annual Maintenance charges for the above services will be AED
                                            <strong style="font-size:14px" t-esc="'{0:,.2f}'.format(float(total_price))"/>
                                            (
                                            <strong t-esc="user.currency_id.with_context(lang='en_US').amount_to_text(total_price)"/>
                                            )
                                            and there will be <t t-if="doc.no_schedules"><span t-field="doc.no_schedules"/> visits in per year and</t> 24 hrs emergency call out
                                            support.
                                        </span>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <br/>

                        </t>

                        <span>
                            <u>
                                <b>SCOPE OF WORK</b>
                            </u>
                        </span>
                        <br/>
                        <br/>
                        <table width="90%">

                            <t t-foreach="doc.amc_system_type_ids" t-as="line">
                                <div style="page-break-inside: avoid;">
                                    <b><span t-field="line.amc_service_type.name"/></b>
                                    <br/>
                                    <span t-raw="line.description"/>
                                </div>
                            </t>
                        </table>
                        <br/>
                        <br/>
                        <span>
                            <u>
                                <b>EXCLUDED IN THE ABOVE</b>
                            </u>
                        </span>
                        <br/>
                        <br/>
                        <strong>Note : If Fire Alarm Panel/Fire Pumps/Hose Reel/Devices/Equipments have any fault, it
                            will
                            be rectified during
                            our first Service. Any spare/service will be charged separately
                        </strong>

                        <p style="page-break-after:always;"></p>
                        <span>
                            <u>
                                <b>TERMS &amp; CONDITIONS</b>
                            </u>
                        </span>
                        <br/>
                        <br/>
                        <span>
                            <b>Quotation Validity:</b>
                        </span>
                        <t t-if="doc.validity_id">
                            <span style="padding-left:100px" t-field="doc.validity_id.name"/>
                        </t>
                        <br/>
                        <br/>
                        <span>
                            <b>Payment Terms:</b>
                        </span>
                        <t t-if="doc.payment_term_id">
                            <span style="padding-left:110px" t-field="doc.payment_term_id.name"/>
                        </t>
                        <br/>
                        <br/>
                        <div style="margin-left:15px;">
                            <span t-raw="doc.terms_and_condition" />
                        </div>

                        <br/>
                        <br/>
                        <span>
                            <b>Thanks &amp; Regards,</b>
                        </span>
                        <br/>
                        <br/>
                        <span>
                            Signature &amp; Name
                        </span>

                    </div>


                </t>
            </t>
        </template>


    </data>
</openerp>
