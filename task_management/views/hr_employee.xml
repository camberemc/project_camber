<odoo>
    <record id="hr_employee_edit" model="ir.ui.view">
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']/div/div" position="inside">
                <group name="work_fee" string="Cost Details">
                    <field name="daily_cost"/>
                    <field name="ot_cost"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>